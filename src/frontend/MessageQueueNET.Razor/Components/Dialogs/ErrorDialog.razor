<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">An unhandeled error occoured:</MudText>
        <MudText>@Content</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }
    [Parameter] public string Content { get; set; } = "";

    void CloseDialog() => MudDialog?.Close();
}